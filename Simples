package solucao;

public final class CelularSimples {
    private String marca;
    private String modelo;

    public CelularSimples(String marca, String modelo) {
        this.marca = marca;
        this.modelo = modelo;
    }

    public String getMarca() {
        return marca;
    }

    public void setMarca(String marca) {
        this.marca = marca;
    }

    public String getModelo() {
        return modelo;
    }

    public void setModelo(String modelo) {
        this.modelo = modelo;
    }

    public void ligar() {
        System.out.println(modelo + " está ligando...");
    }

    public void atender() {
        System.out.println(modelo + " está atendendo a ligação...");
    }
}
